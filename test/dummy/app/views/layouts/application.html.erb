<!DOCTYPE html>
<html>
  <head>
    <title>Dummy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <script type="importmap">
      {
        "imports": {
          "@hotwired/stimulus": "<%= asset_url "stimulus.js" %>",
          "@hotwired/turbo-rails": "<%= asset_url "turbo.js" %>",
          "@seanpdoyle/turbo_stream_button": "<%= asset_url "turbo_stream_button.js" %>"
        }
      }
    </script>
    <script type="module">
      import "@hotwired/turbo-rails"
      import { Application } from "@hotwired/stimulus"
      import { TurboStreamButtonController } from "@seanpdoyle/turbo_stream_button"

      window.application = Application.start()
      application.register("turbo-stream-button", TurboStreamButtonController)

      <%= yield :javascript %>
    </script>
    <script type="module" src="https://unpkg.com/es-module-shims@0.10.1/dist/es-module-shims.js"></script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
